  <script>
    $(document).ready(function () {
        // Function to copy data to clipboard
        function copyToClipboard() {
          // Get the data-clipboard-text attribute value
          var clipboardText = $('#modal-share .copy').attr('data-clipboard-text').trim();
    
          // Create a temporary text area element
          var tempTextArea = $('<textarea>');
          tempTextArea.val(clipboardText);
    
          // Append the text area to the document
          $('body').append(tempTextArea);
    
          // Select the text in the text area
          tempTextArea.select();
          tempTextArea[0].setSelectionRange(0, 99999); // For mobile devices
    
          // Copy the selected text to the clipboard
          document.execCommand('copy');
    
          // Remove the temporary text area
          tempTextArea.remove();
    
          // Optionally, provide some feedback to the user
          alert('Text copied to clipboard: ' + clipboardText);
        }
    
        // Call the function when the copy button is clicked
        $('#modal-share .copy').on('click', copyToClipboard);
  });
  </script>
  <script>
          function downloadVCF(contactInfo) {
              const vcfContent = `BEGIN:VCARD
  VERSION:3.0
  FN:${contactInfo.fullName}
  TEL:${contactInfo.phoneNumber}
  EMAIL:${contactInfo.email}
  END:VCARD`;
  
              const blob = new Blob([vcfContent], { type: 'text/vcard' });
  
              const link = document.createElement('a');
              link.download = 'Krisztian Jakovcevic.vcf';
              link.href = window.URL.createObjectURL(blob);
  
              document.body.appendChild(link);
              link.click();
              document.body.removeChild(link);
          }
  
          document.getElementById('resume_vcf_download').addEventListener('click', function() {
              const contactInfo = {
                  fullName: 'John Doe',
                  phoneNumber: '+1234567890',
                  email: 'john.doe@example.com'
              };
              downloadVCF(contactInfo);
          });
  </script>
